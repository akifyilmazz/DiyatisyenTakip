<section>

    <div class="modal fade" id="modal-anket-temelBilgi" data-url='@Url.Action("TemelBilgiModal","PartialModal")' tabindex="-1" role="dialog" aria-labelledby="modal-form"
         aria-hidden="true">
    </div>

    <div class="modal fade" id="modal-anket-diyetOykusu" data-url='@Url.Action("DiyetOykusuModal","PartialModal")' tabindex="-1" role="dialog" aria-labelledby="modal-form"
         aria-hidden="true">
    </div>

    <div class="modal fade" id="modal-anket-besinAliskanlik" data-url='@Url.Action("BesinAliskanlikModal","PartialModal")' tabindex="-1" role="dialog" aria-labelledby="modal-form"
