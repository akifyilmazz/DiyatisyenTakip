        $('#btnTemelBilgiModal').click(function () {
            var url = $('#modal-anket-temelBilgi').data('url');

            if ($("#kisiBilgisi > .card-body").length != 0) {
                toastr.error(" 2. Bir Temel Bilgi Eklenemez !");
                return false;
            }

