@{
    ViewBag.Title = "ProfileList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}@section HeaderCss{
    <style>
        .card {
            margin-bottom: 0px !important;
        }

        .gizle {
            display: none;
        }
        .container-fluid.mt--6 .row .col-xl-8.order-xl-1 {
            max-width: 100%;
            flex: 1 0 66.66667%;
        }
    </style>
}
<section>
    <div class="header bg-primary pb-6">
        <div class="container-fluid">
            <div class="header-body">
                <div class="row align-items-center py-4">
                    <div class="col-lg-6 col-7">
                        <h6 class="h2 text-white d-inline-block mb-0">
                            <a href="javascript:void(0)" id="kullaniciBilgisiBtn" class="btn btn-neutral">
                                <font style="vertical-align: inherit;">
                                    <font style="vertical-align: inherit;">
                                        Kullanıcı Bilgisi
                                    </font>
                                </font>
                            </a>
                            <a href="javascript:void(0)" id="iletisimBilgileriBtn" class="btn btn-neutral">
                                <font style="vertical-align: inherit;">
                                    <font style="vertical-align: inherit;">
                                        İletişim Bilgileri
                                    </font>
                                </font>
                            </a>
                            <a href="javascript:void(0)" id="sireketBilgiBtn" class="btn btn-neutral">
                                <font style="vertical-align: inherit;">
                                    <font style="vertical-align: inherit;">
                                        Şirket Bilgileri
                                    </font>
                                </font>
                            </a>
                            <a href="javascript:void(0)" id="ayarlarBtn" class="btn btn-neutral">
                                <font style="vertical-align: inherit;">
                                    <font style="vertical-align: inherit;">
