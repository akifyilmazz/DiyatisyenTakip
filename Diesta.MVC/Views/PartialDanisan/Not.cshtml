<div class="card-body">

    <div class="row">
        <div class="col-md-9">
            <h6 class="heading-small text-muted mb-4">Not</h6>
        </div>
        <div class="col-md-3 text-right">
            <a class="btn btn-sm btn-icon-only text-light" id="removeNot" href="javascript:void(0)" role="button" aria-haspopup="true" aria-expanded="false">
                <i class="ni ni-fat-remove fa-lg"></i>
            </a>
            <a class="btn btn-sm btn-icon-only text-light" id="editNot" href="javascript:void(0)" role="button" aria-haspopup="true" aria-expanded="false">
                <i class="far fa-edit fa-lg"></i>
            </a>
        </div>
    </div>

    <div class="pl-lg-4">
        <div class="row">
            <div class="col-lg-4">
                <div class="form-group">
                    <label class="form-control-label" for="input-username">Tarih</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="ni ni-calendar-grid-58"></i></span>
                        </div>
                        <input class="form-control" id="Not-Tarih" type="text" readonly>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="form-group">
                    <label class="form-control-label">Şikayeti</label>
                    <textarea rows="4" id="Not-Sikayet" class="form-control" readonly></textarea>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="form-group">
                    <label class="form-control-label">Notlar</label>
                    <textarea rows="4" id="Not-Notlar" class="form-control" readonly></textarea>
                </div>
            </div>
        </div>
    </div>
</div>

<hr class="my-4">

<script>
    $('#removeNot').click(function (event) {
        $(this).parents(".card-body").remove();
    });


    $('#editNot').click(function (event) {

            var url = $('#modal-anket-not').data('url');

            $.get(url, function (data) {
                $('#modal-anket-not').html(data);

                $("#NotModal-Tarih").val($("#Not-Tarih").val());

                $("#NotModal-Sikayet").val($("#Not-Sikayet").val());

                $("#NotModal-Notlar").val($("#Not-Notlar").val());

                $('#modal-anket-not').modal('show');
            });

    });
</script>