<div class="card-body">
    <div class="row">
        <div class="col-md-9">
            <h6 class="heading-small text-muted mb-4">Antropometri</h6>
        </div>
        <div class="col-md-3 text-right">
            <a class="btn btn-sm btn-icon-only text-light" id="removeAntropometri" href="javascript:void(0)" role="button" aria-haspopup="true" aria-expanded="false">
                <i class="ni ni-fat-remove fa-lg"></i>
            </a>
            <a class="btn btn-sm btn-icon-only text-light" id="editAntropometri" href="javascript:void(0)" role="button" aria-haspopup="true" aria-expanded="false">
                <i class="far fa-edit fa-lg"></i>
            </a>
        </div>
    </div>

    <div class="pl-lg-4">
        <div class="row">
            <div class="col-lg-4">
                <div class="form-group">
                    <label class="form-control-label" for="input-username">Tarih</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="ni ni-calendar-grid-58"></i></span>
                        </div>
                        <input class="form-control datepicker" id="Antropometri-Tarih" type="text" readonly>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="form-group">
                    <label class="form-control-label" for="input-username">
                        BMI
                    </label>
                    <input type="text" id="Antropometri-BMI" class="form-control" readonly value="0.0">
                </div>
            </div>
            <div class="col-lg-4">
                <div class="form-group">
                    <label class="form-control-label" for="input-username">
                        Ağırlık
                    </label>
                    <input type="text" id="Antropometri-Agırlık" class="form-control" readonly>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="form-group">
                    <label class="form-control-label" for="input-username">
                        Boy
                    </label>
                    <input type="text" id="Antropometri-Boy" class="form-control" readonly>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-4">
                <div class="form-group">
                    <label class="form-control-label" for="input-username">
                        Bel
                    </label>
                    <input type="text" id="Antropometri-Bel" class="form-control" readonly>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="form-group">
                    <label class="form-control-label" for="input-username">
                        Kalça
                    </label>
                    <input type="text" id="Antropometri-Kalca" class="form-control" readonly>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="form-group">
                    <label class="form-control-label" for="input-username">
                        Yağ
                    </label>
                    <input type="text" id="Antropometri-Yag" class="form-control" readonly>
                </div>
            </div>
        </div>
    </div>

</div>

<hr class="my-4">



<script>
    $('#removeAntropometri').click(function (event) {
        $(this).parents(".card-body").remove();
    });


    $('#editAntropometri').click(function () {
        var url = $('#modal-anket-antropometri').data('url');


        $.get(url, function (data) {
            $('#modal-anket-antropometri').html(data);

            $("#AntropometriModal-Tarih").val($("#Antropometri-Tarih").val());

            $("#AntropometriModal-Agırlık").val($("#Antropometri-Agırlık").val());

            $("#AntropometriModal-Boy").val($("#Antropometri-Boy").val());

            $("#AntropometriModal-Bel").val($("#Antropometri-Bel").val());

            $("#AntropometriModal-Kalca").val($("#Antropometri-Kalca").val());

            $("#AntropometriModal-Yag").val($("#Antropometri-Yag").val());


            $('#modal-anket-antropometri').modal('show');
        });
    });
</script>