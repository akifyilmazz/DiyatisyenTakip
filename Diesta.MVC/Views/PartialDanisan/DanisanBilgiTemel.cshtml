<div class="card-body">
    <div class="row">
        <div class="col-md-9">
            <h6 class="heading-small text-muted mb-4">Kişi Bilgileri</h6>
        </div>
        <div class="col-md-3 text-right">
            <a class="btn btn-sm btn-icon-only text-light" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                <i class="ni ni-fat-remove fa-lg"></i>
            </a>
            <a class="btn btn-sm btn-icon-only text-light" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                <i class="far fa-edit fa-lg"></i>
            </a>
        </div>
    </div>

    <div class="pl-lg-4">
        <div class="row">
            <div class="col-lg-3">
                <div class="form-group">
                    <label class="form-control-label" for="input-username">Ad</label>
                    <input type="text" id="danisanBilgiTemel-Ad" class="form-control"
                           placeholder="Ad Giriniz  *" value="">
                </div>
            </div>
            <div class="col-lg-3">
                <div class="form-group">
                    <label class="form-control-label" for="input-username">Soyad</label>
                    <input type="text" id="danisanBilgiTemel-Soyad" class="form-control"
                           placeholder="Soyad Giriniz  *" value="">
                </div>
            </div>
            <div class="col-lg-3">
                <div class="form-group">
                    <label class="form-control-label" for="input-username">Doğum Tarih</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text">
                                <i class="ni ni-calendar-grid-58"></i>
                            </span>
                        </div>
                        <input class="form-control datepicker" id="danisanBilgiTemel-DogTar" placeholder="Select date"
                               type="text" value="06/20/2020">
                    </div>
                </div>

            </div>
            <div class="col-lg-3">
                <div class="form-group">
                    <label class="form-control-label" for="input-username">Cinsiyet</label>
                    <div class="input-group">
                        <div class="custom-control custom-radio custom-control-inline">
                            <input type="radio" id="customRadioInline1"
                                   name="customRadioInline1" class="custom-control-input danisanBilgiTemel-Cinsiyet">
                            <label class="custom-control-label"
                                   for="customRadioInline1">Erkek</label>
                        </div>
                        <div class="custom-control custom-radio custom-control-inline">
                            <input type="radio" id="customRadioInline2"
                                   name="customRadioInline1" class="custom-control-input danisanBilgiTemel-Cinsiyet">
                            <label class="custom-control-label"
                                   for="customRadioInline2">Kadın</label>
                        </div>
                    </div>

                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-3">
                <div class="form-group">
                    <label for="exampleFormControlSelect1">Eğitim Durumu</label>
                    <select class="form-control" id="danisanBilgiTemel-EgitimDurumu">
                        <option>İlköğretim</option>
                        <option>Ortaöğretim</option>
                        <option>Önlisans</option>
                        <option>Lisans</option>
                        <option>Lisanüstü</option>
                    </select>
                </div>
            </div>
            <div class="col-lg-3">
                <div class="form-group">
                    <label for="exampleFormControlSelect1">Yaş Grubu</label>
                    <select class="form-control" id="danisanBilgiTemel-YasGrubu">
                        <option>18-25</option>
                        <option>25-30</option>
                        <option>30-40</option>
                        <option>40-50</option>
                        <option>50-60</option>
                    </select>
                </div>
            </div>
            <div class="col-lg-3">
                <div class="form-group">
                    <label class="form-control-label" for="input-username">Telefon</label>
                    <input type="text" id="danisanBilgiTemel-Tel" class="form-control"
                           placeholder="Username" value="">
                </div>
            </div>
            <div class="col-lg-3">
                <div class="form-group">
                    <label class="form-control-label" for="input-username">E-Posta</label>
                    <input type="email" id="danisanBilgiTemel-Email" class="form-control"
                           placeholder="E-Posta Giriniz  *">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-3">
                <div class="form-group">
                    <label class="form-control-label" for="input-username">TC Kimlik No</label>
                    <input type="text" id="danisanBilgiTemel-TcNo" class="form-control"
                           placeholder="TC Kimlik No Giriniz  *" value="">
                </div>
            </div>
            <div class="col-lg-3">
                <div class="form-group">
                    <label class="form-control-label" for="input-city">Şehir</label>
                    <select class="form-control" id="danisanBilgiTemel-Sehir">
                        <option>İstanbul</option>
                        <option>Ankara</option>
                        <option>İzmir</option>
                    </select>

                </div>
            </div>
            <div class="col-lg-3">
                <div class="form-group">
                    <label class="form-control-label" for="input-country">İlçe</label>
                    <select class="form-control" id="danisanBilgiTemel-Ilce">
                        <option>Kadıköy</option>
                        <option>Pendik</option>
                        <option>Beşiktaş</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">

                <div class="form-group">
                    <label class="form-control-label">Adres</label>
                    <textarea rows="4" id="danisanBilgiTemel-Adres" class="form-control"
                              placeholder="Adres Giriniz  *">Adres Giriniz  *</textarea>
                </div>

            </div>
        </div>
    </div>
</div>

<hr class="my-4" />
