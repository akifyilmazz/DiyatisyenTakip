<script>
    $('#btnGecmisModalEkle').click(function () {


        var promise = new Promise(function (resolve, reject) {

            $("#gecmisModal-resmiHastalik input[type='radio']:checked").val() == "Evet" ?
                ($("#gecmisModal-resmiHastalikIcerik input[type='radio']:checked").val() == undefined ?
                    ($("#gecmisModal-hastalikTextArea").val().trim() == "" ?
                        reject("Lütfen Teşhis Edilen Hastalığı Giriniz Giriniz") : "") : "") :
                $("#gecmisModal-resmiHastalik input[type='radio']:checked").val() == undefined ?
                    reject("Lütfen Teşhis Konulmuş Hastalık Durumunu Giriniz") : ""

            resolve();
        });

        promise.catch(function (err) {
            toastr.error(err);
        })

        promise.then(function (data) {

            var url = $('#ozGecmis').data('url');
            $.get(url, function (data) {
                $('#ozGecmis').html(data);

                $("#Gecmis-resmiHastalik").val($('#gecmisModal-resmiHastalik input[type="radio"]:checked').val());

                $("#Gecmis-resmiHastalikIcerik").val($('#gecmisModal-resmiHastalikIcerik input[type="radio"]:checked').val() == undefined ? $("#gecmisModal-hastalikTextArea").val() : $('#gecmisModal-resmiHastalikIcerik input[type="radio"]:checked').val());

                $('#modal-anket-gecmis').modal('hide');
            });

        });

    });
</script>