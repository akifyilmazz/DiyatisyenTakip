<script>
    $('#btnBesinAliskanlikModalEkle').click(function () {


        var promise = new Promise(function (resolve, reject) {

            $("#BesinAliskanlikModal-GidaAlerjisi").val().trim() == "" ? reject("Lütfen Gıda Alerjisi Durumunuzu Giriniz") : ""

            $("#BesinAliskanlikModal-ogunSayisi").val().trim() == "" ? reject("Lütfen Öğün Sayınızı Giriniz") : ""

            $("#BesinAliskanlikModal-ogunAtlarMisin input[type='radio']:checked").val() == "" ? reject("Lütfen Öğün Atlama Durumunuzu giriniz") : ""


            $("#BesinAliskanlikModal-ogunAtlarMisin input[type='radio']:checked").val() == "Evet" ?
                ($("#BesinAliskanlikModal-AtlamaSebebi input[type='radio']:checked").val() == undefined ?
                    ($("#BesinAliskanlikModal-AtlamaSebebitextArea").val().trim() == "" ?
                        reject("Lütfen Öğün Atlama Sebebi Giriniz") : "") : "") :
                $("#BesinAliskanlikModal-ogunAtlarMisin input[type='radio']:checked").val() == undefined ?
                    reject("Lütfen Öğün Atlama/Atlamama Durumunu Giriniz") : ""

            $("#BesinAliskanlikModal-ogunArasi input[type='radio']:checked").val() == "" ? reject("Lütfen Öğün Sayınızı Giriniz") : ""

            $("#BesinAliskanlikModal-suTuketim").val().trim() == "" ? reject("Lütfen Öğün Sayınızı Giriniz") : ""

            $("#BesinAliskanlikModal-tatliYemek input[type='radio']:checked").val() == "Evet" ?
                $("#BesinAliskanlikModal-tatliSiklik").val().trim() == "" ?
                    reject("Lütfen Tatlı Yeme Sıklığını giriniz") : "" :
                $("#BesinAliskanlikModal-tatliYemek input[type='radio']:checked").val() == undefined ?
                    reject("Lütfen Tatlı Yeme Durumunuzu Giriniz") : ""

            $("#BesinAliskanlikModal-YemekHizi").val() == "" ? reject("Lütfen Yemek Yeme Hızınızı Giriniz") : ""

            $("#BesinAliskanlikModal-yemeSikligi option:selected").val() == "0" ? reject("Lütfen Dışarıda Yemek Yeme Sıklığınızı Giriniz") : ""

            $("#BesinAliskanlikModal-NerdeYersin option:selected").val() == "0" ? reject("Lütfen Dışarıda En Sık Nerde Yediğinizi Giriniz") : ""

            $("#BesinAliskanlikModal-icecekSiklik input[type='radio']:checked").val() == undefined ? reject("Lütfen Asitli İçecek İçme Sıklığınızı Giriniz") : ""


            resolve();
        });

        promise.catch(function (err) {
            toastr.error(err);
        })

        promise.then(function (data) {

            var url = $('#besinAliskanligi').data('url');
            $.get(url, function (data) {
                $('#besinAliskanligi').html(data);

                $("#inputBesinAliskanlik-GidaAlerjisi").val($('#BesinAliskanlikModal-GidaAlerjisi').val());

                $("#inputBesinAliskanlik-ogunSayisi").val($('#BesinAliskanlikModal-ogunSayisi').val());

                $("#inputBesinAliskanlik-ogunAtlarMisin").val($('#BesinAliskanlikModal-ogunAtlarMisin input[type="radio"]:checked').val());

                $("#inputBesinAliskanlik-AtlamaSebebi").val($('#BesinAliskanlikModal-AtlamaSebebi input[type="radio"]:checked').val() == undefined ? $('#BesinAliskanlikModal-AtlamaSebebitextArea').val() : $('#BesinAliskanlikModal-AtlamaSebebi input[type="radio"]:checked').val());

                $("#inputBesinAliskanlik-ogunArasi").val($("#BesinAliskanlikModal-ogunArasi input[type='radio']:checked").val());

                $("#inputBesinAliskanlik-suTuketim").val($('#BesinAliskanlikModal-suTuketim').val());

                $("#inputBesinAliskanlik-tatliYemek").val($('#BesinAliskanlikModal-tatliYemek input[type="radio"]:checked').val());

                $("#inputBesinAliskanlik-tatliSiklik").val($('#BesinAliskanlikModal-tatliSiklik').val());

                $("#inputBesinAliskanlik-YemekHizi").val($('#BesinAliskanlikModal-YemekHizi').val());

                $("#inputBesinAliskanlik-yemeSikligi").val($('#BesinAliskanlikModal-yemeSikligi option:selected').text());

                $("#inputBesinAliskanlik-NerdeYersin").val($('#BesinAliskanlikModal-NerdeYersin option:selected').text());

                $("#inputBesinAliskanlik-icecekSiklik").val($('#BesinAliskanlikModal-icecekSiklik input[type="radio"]:checked').val());


                $('#modal-anket-besinAliskanlik').modal('hide');

                
            });

        });

    });
</script>